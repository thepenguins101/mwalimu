<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevoh.thepenguins.Register_students">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="Please fill all the details below."/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/college_name"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:hint="College Name"
        android:layout_below="@+id/text1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:hint="College Location"
        android:layout_below="@+id/college_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam_body"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:hint="Exam Body"
        android:layout_below="@+id/location"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:layout_below="@+id/exam_body"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:inputType="phone"
        android:layout_marginTop="5dp"
        android:hint="Phone Number"
        android:layout_below="@+id/email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slots"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:hint="Slots Available"
        android:layout_below="@+id/phone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fees"
        android:inputType="numberDecimal"
        android:layout_marginTop="5dp"
        android:hint="Fees Amount"
        android:layout_below="@+id/slots"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:hint="Description"
        android:layout_below="@+id/fees"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bregister"
        android:text="Register"
        android:textColor="#FFF"
        android:onClick="register"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
