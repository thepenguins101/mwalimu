<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ken"
        android:src="@drawable/mik"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#1c000000"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as:"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textStyle="italic"
            android:textColor="#FFFF"
            android:textSize="30dp"
            android:id="@+id/log"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/college_log_in"
            android:background="@drawable/mybutton"
            android:textColor="#FFF"
            android:layout_marginTop="40dp"
            android:text="College Administrator"
            android:layout_centerInParent="true"
            android:layout_below="@+id/log"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/college_log_in"
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:text="_________Or________"
            android:id="@+id/or"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student_access_button"
            android:text="Trainee"
            android:background="@drawable/mybutton"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/or"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:layout_below="@id/student_access_button"
            android:text="Not registered?Sign up here."
            android:onClick="sign"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>
    </RelativeLayout>


</RelativeLayout>
