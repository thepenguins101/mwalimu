<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevoh.thepenguins.CollegeActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/IvCollege1"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IvCollege1"
        android:id="@+id/listviewinfo"
        android:layout_marginTop="10dp">

    </ListView>

    <com.sa90.materialarcmenu.ArcMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arcmenu"
        app:menu_color="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        app:menu_open="arc_right">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:id="@+id/fabprofile"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register"
            android:id="@+id/fabregister"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loan"
            android:id="@+id/fabloan"/>

    </com.sa90.materialarcmenu.ArcMenu>




</RelativeLayout>
